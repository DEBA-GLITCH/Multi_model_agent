{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan",
  "type": "object",
  "required": [
    "goal",
    "steps",
    "dependencies",
    "success_criteria",
    "constraints"
  ],
  "properties": {
    "goal": {
      "type": "string",
      "description": "High-level objective of the plan"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "step_id",
          "action",
          "inputs",
          "expected_output"
        ],
        "properties": {
          "step_id": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "description": "Legal or administrative action to be performed"
          },
          "inputs": {
            "type": "object",
            "description": "Parameters required for this step (jurisdiction, entity type, etc.)"
          },
          "expected_output": {
            "type": "string",
            "description": "Document, certificate, or approval produced by this step"
          }
        },
        "additionalProperties": false
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Step dependency graph where each key depends on listed step_ids",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "success_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "Objective conditions the critic can verify"
      }
    },
    "constraints": {
      "type": "object",
      "description": "Operational or legal constraints such as geography, budget, or scope"
    }
  },
  "additionalProperties": false
}
