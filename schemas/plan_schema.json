{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan",
  "type": "object",
  "required": [
    "goal",
    "steps",
    "dependencies",
    "success_criteria",
    "constraints"
  ],
  "properties": {
    "goal": {
      "type": "string",
      "description": "Clear, testable objective of the plan"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "step_id",
          "action",
          "inputs",
          "expected_output"
        ],
        "properties": {
          "step_id": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "description": "Tool name or abstract operation"
          },
          "inputs": {
            "type": "object",
            "description": "Parameters required for this step"
          },
          "expected_output": {
            "type": "string",
            "description": "What success looks like for this step"
          }
        },
        "additionalProperties": false
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Step dependency graph (DAG)",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "success_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "Objective checks the critic can verify"
      }
    },
    "constraints": {
      "type": "object",
      "description": "Hard limits that must not be violated"
    }
  },
  "additionalProperties": false
}
